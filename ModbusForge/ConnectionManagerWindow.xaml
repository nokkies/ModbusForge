<mah:MetroWindow x:Class="ModbusForge.ConnectionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Connection Manager" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        BorderThickness="1"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Connection List -->
        <GroupBox Header="Connections" Grid.Column="0" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ListBox x:Name="ConnectionsList" 
                         Grid.Row="0"
                         ItemsSource="{Binding Profiles}"
                         SelectedItem="{Binding SelectedProfile}"
                         SelectionChanged="ConnectionsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Gray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                <TextBlock Text=" - " Foreground="Gray"/>
                                <TextBlock Text="{Binding IpAddress}" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Add" Width="60" Margin="0,0,5,0" Click="AddButton_Click"/>
                    <Button Content="Remove" Width="60" Margin="0,0,5,0" Click="RemoveButton_Click"/>
                    <Button Content="Clone" Width="60" Click="CloneButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Connection Details -->
        <GroupBox Header="Connection Details" Grid.Column="1" Margin="5,0,0,0">
            <Grid x:Name="DetailsPanel" IsEnabled="{Binding HasSelection}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Name:" Grid.Row="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"
                         Text="{Binding SelectedProfile.Name, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="IP Address:" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="IpTextBox" Grid.Row="1" Grid.Column="1" Margin="5"
                         Text="{Binding SelectedProfile.IpAddress, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Port:" Grid.Row="2" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="PortTextBox" Grid.Row="2" Grid.Column="1" Margin="5"
                         Text="{Binding SelectedProfile.Port, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Unit ID:" Grid.Row="3" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="UnitIdTextBox" Grid.Row="3" Grid.Column="1" Margin="5"
                         Text="{Binding SelectedProfile.UnitId, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Status:" Grid.Row="4" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Margin="5"
                           Text="{Binding SelectedProfile.Status}"/>
                
                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5,15,5,5">
                    <Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="0,0,10,0" 
                            Click="ConnectButton_Click"/>
                    <Button x:Name="DisconnectButton" Content="Disconnect" Width="100" Margin="0,0,10,0"
                            Click="DisconnectButton_Click"/>
                    <Button x:Name="SetActiveButton" Content="Set as Active" Width="100"
                            Click="SetActiveButton_Click"/>
                </StackPanel>
                
                <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Margin="5" TextWrapping="Wrap" Foreground="Gray">
                    <Run Text="Tip: "/>
                    <Run Text="You can connect to multiple Modbus servers simultaneously. The 'Active' connection is used for the main window operations. Switch between connections using 'Set as Active'."/>
                </TextBlock>
                
                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Save &amp; Close" Width="100" Margin="0,0,10,0" Click="SaveCloseButton_Click"/>
                    <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</mah:MetroWindow>
