<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Metallic Grey and Black Color Scheme -->
    <Color x:Key="MetallicBlack">#FF0D0D0D</Color>
    <Color x:Key="MetallicDarkGrey">#FF1C1C1C</Color>
    <Color x:Key="MetallicMediumGrey">#FF2A2A2A</Color>
    <Color x:Key="MetallicLightGrey">#FF3F3F3F</Color>
    <Color x:Key="MetallicSilver">#FF656565</Color>
    <Color x:Key="MetallicHighlight">#FF7A7A7A</Color>
    <Color x:Key="MetallicShine">#FF909090</Color>
    <Color x:Key="MetallicAccent">#FF00B4D8</Color>
    <Color x:Key="MetallicAccentHover">#FF00D4FF</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="MetallicBlackBrush" Color="{StaticResource MetallicBlack}"/>
    <SolidColorBrush x:Key="MetallicDarkGreyBrush" Color="{StaticResource MetallicDarkGrey}"/>
    <SolidColorBrush x:Key="MetallicMediumGreyBrush" Color="{StaticResource MetallicMediumGrey}"/>
    <SolidColorBrush x:Key="MetallicLightGreyBrush" Color="{StaticResource MetallicLightGrey}"/>
    <SolidColorBrush x:Key="MetallicSilverBrush" Color="{StaticResource MetallicSilver}"/>
    <SolidColorBrush x:Key="MetallicHighlightBrush" Color="{StaticResource MetallicHighlight}"/>
    <SolidColorBrush x:Key="MetallicShineBrush" Color="{StaticResource MetallicShine}"/>
    <SolidColorBrush x:Key="MetallicAccentBrush" Color="{StaticResource MetallicAccent}"/>
    <SolidColorBrush x:Key="MetallicAccentHoverBrush" Color="{StaticResource MetallicAccentHover}"/>

    <!-- Sleek Button Style with Hover Effect -->
    <Style x:Key="MetallicButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MetallicLightGreyBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MetallicShineBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MetallicSilverBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <Border.Effect>
                            <DropShadowEffect x:Name="shadow" 
                                            Color="{StaticResource MetallicBlack}" 
                                            Direction="270" 
                                            ShadowDepth="2" 
                                            BlurRadius="4" 
                                            Opacity="0.5"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicHighlight}"
                                                      Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicAccent}"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="8"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicLightGrey}"
                                                      Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicSilver}"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="4"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="border" Property="TextElement.Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource MetallicMediumGreyBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource MetallicBlack}" Direction="270" ShadowDepth="1" BlurRadius="2" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource MetallicDarkGreyBrush}"/>
                            <Setter TargetName="border" Property="TextElement.Foreground" Value="{StaticResource MetallicSilverBrush}"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Accent Button Style (for primary actions) -->
    <Style x:Key="MetallicAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource MetallicButtonStyle}">
        <Setter Property="Background" Value="{StaticResource MetallicAccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <Border.Effect>
                            <DropShadowEffect x:Name="shadow" 
                                            Color="{StaticResource MetallicAccent}" 
                                            Direction="270" 
                                            ShadowDepth="2" 
                                            BlurRadius="6" 
                                            Opacity="0.7"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicAccentHover}"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="12"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="{StaticResource MetallicAccent}"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="6"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource MetallicLightGreyBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource MetallicAccent}" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource MetallicDarkGreyBrush}"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Apply to all buttons by default -->
    <Style TargetType="Button" BasedOn="{StaticResource MetallicButtonStyle}"/>

</ResourceDictionary>
