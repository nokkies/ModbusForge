<mah:MetroWindow x:Class="ModbusForge.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Preferences" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        BorderThickness="1"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <GroupBox Header="Connection" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="AutoReconnectCheckBox" Content="Auto-reconnect on connection loss" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="Reconnect interval (ms):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="ReconnectIntervalTextBox" Width="80" Text="5000"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Diagnostics" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="ShowDiagnosticsOnErrorCheckBox" Content="Show diagnostics dialog on connection error" Margin="0,0,0,5"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Console" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="EnableConsoleLoggingCheckBox" Content="Enable console logging" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Max console messages:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="MaxConsoleMessagesTextBox" Width="80" Text="1000"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Application" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="ConfirmOnExitCheckBox" Content="Confirm before exiting application"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
