<Window x:Class="ConverterTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterTest"
        mc:Ignorable="d"
        Title="Converter Test" Height="200" Width="400">
    <Window.Resources>
        <local:TestConverter x:Key="TestConverter"/>
    </Window.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <CheckBox x:Name="TestCheckBox" Content="Check to test converter" Margin="10"/>
        <TextBlock Text="{Binding IsChecked, ElementName=TestCheckBox, Converter={StaticResource TestConverter}}" 
                   HorizontalAlignment="Center" Margin="10"/>
        <TextBlock Text="The above text should be the opposite of the checkbox state" 
                   HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Width="300"/>
    </StackPanel>
</Window>
